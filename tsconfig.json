{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "src/**/*",
    "*.d.ts"
  ]
}
